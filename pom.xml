        <version>1.0.0</version>
    </parent>
    
    <artifactId>bonita-connector-document-converter</artifactId>
    <packaging>pom</packaging>

    <properties>
        <bonita.engine.version>7.0.0</bonita.engine.version>
    </properties>

    <modules>
		<module>bonita-connector-document-converter-def</module>
		<module>bonita-connector-document-converter-impl</module>
	</modules>

    <dependencies>
